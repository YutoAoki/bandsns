<div class="users-new-wrapper">
  <div class="container">
    <div class="col-md-offset-4 col-md-4 users-new-container">
      <h1 class="users-new-logo text-center">ログイン</h1>
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'logo-discription' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'logo-discription' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit "ログイン", class: "btn btn-block btn-white" %>
      <% end %>
    </div>
  </div>
</div>
