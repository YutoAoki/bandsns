<div class="topic-index-wrapper">
  <div class="container">

    <%= search_form_for @search do |f| %>
      <div class="form-group">
        <%= f.label :band_name_cont, "Name" %>
        <%= f.text_field :band_name_cont, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Search" %>
      </div>
    <% end %>


    <% @bands.each do |band| %>
      <div class="row">
        <div class="col-md-5 col-md-offset-1">
          <div class="topic-index-single">
            <h2 class="topic-author">
              バンド名：<%= link_to band.band_name, band_path(band.id) %>
            </h2>
            <p>
              ジャンル：<%= band.band_categ %>
            </p>

            <!-- <%#= image_tag band.band_img.url %> -->
            <p class="topic-text">
              -Profile-<br>
              <%= band.band_bio %>
            </p>
          </div>


        </div>
        <div class="col-md-5 col-md-offset-1">
          <!-- <%#= image_tag '/bands-new.jpg', class: 'band-image-box' %> -->
          <%= image_tag band.band_img.url, class: 'band-image-box' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
